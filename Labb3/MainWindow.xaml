<Window
    x:Class="Labb3ProgTemplate.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Labb3ProgTemplate.Views"
    Title="MainWindow"
    Width="800"
    Height="550"
    MinWidth="800"
    MinHeight="550"
    Closing="MainWindow_OnClosing"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Name="LoginTab" Header="Login">
                <views:LoginView x:Name="LoginViewTab" />
            </TabItem>
            <TabItem Name="AdminTab" Header="Admin">
                <views:AdminView x:Name="AdminViewTab" />
            </TabItem>
            <TabItem Name="ShopTab" Header="Customer">
                <views:ShopView x:Name="ShopViewTab" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>